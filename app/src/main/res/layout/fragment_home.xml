<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment">

    <TextView
        android:id="@+id/textView_homeFragment_guidLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="5dp"
        android:text="To add data please click bottom right button and create and account using any unique name .To delete account please swipe left or right and to update please press long click ."
        android:textAlignment="center"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/recyclerView_homeScreen_finance"
        app:layout_constraintEnd_toEndOf="@+id/recyclerView_homeScreen_finance"
        app:layout_constraintStart_toStartOf="@+id/recyclerView_homeScreen_finance"
        app:layout_constraintTop_toTopOf="@+id/recyclerView_homeScreen_finance" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_homeScreen_finance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:clipToPadding="false"
        android:foregroundGravity="center"
        android:overScrollMode="always"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>